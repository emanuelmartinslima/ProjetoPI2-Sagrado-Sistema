<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Deletar Produtos - Sagrado Neon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .title {
            color: white;
            margin-bottom: 20px;
        }

        .form-container {
            background-color: rgb(49, 04, 59);
            padding: 20px;
            border-radius: 8px;
        }

        body {
            background-color: rgb(192, 185, 216);
        }

        footer {
            background-color: rgb(49, 04, 59);
            color: white;
        }

        .content-spacing {
            margin-top: 40px;
            margin-bottom: 40px;
        }

        .form-container label {
            color: white;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg" style="background-color: rgb(49, 04, 59);">
        <div class="container-fluid">
            <img src="Images/Logoextendido.png" width="150" height="40" alt="Logo">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <div class="dropdown">
                        <button class="btn btn-light">
                            <i class="bi bi-moon-fill"></i>
                        </button>
                        <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Menu
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Gerar Relatórios</a></li>
                            <li><a class="dropdown-item" href="cadastrarCliente">Gerar Contratos</a></li>
                            <li><a class="dropdown-item" href="atualizarOperador">Editar Dados</a></li>
                            <li><a class="dropdown-item" href="#">Cadastrar Produtos</a></li>
                            <li><a class="dropdown-item" href="/">Sair</a></li>
                        </ul>
                    </div>
                </ul>
            </div>
        </div>
    </nav>

    <div class="flex-grow-1 content-spacing">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">
                    <div class="form-container">
                        <h1 class="text-center title">Deletar Produto</h1>
                        <form id="deletarProdutoForm" onsubmit="return deletarProduto(event)">
                            <div class="mb-3 row">
                                <label for="produtoSelecionado" class="col-sm-4 col-form-label">Produto:</label>
                                <div class="col-sm-8">
                                    <select class="form-select" id="produtoSelecionado" required>
                                        <option value="" disabled selected>Selecione um produto</option>
                                    </select>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-danger">Deletar Produto</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="text-light text-center py-3">
        Todos os direitos reservados
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            carregarListaDeProdutos();
        });

        function carregarListaDeProdutos() {
            const produtos = JSON.parse(localStorage.getItem('produtos')) || [];
            const produtoSelecionado = document.getElementById('produtoSelecionado');
            produtoSelecionado.innerHTML = '<option value="" disabled selected>Selecione um produto</option>'; // Resetar lista

            produtos.forEach((produto, index) => {
                const option = document.createElement('option');
                option.value = index;
                option.textContent = produto.nomeProduto;
                produtoSelecionado.appendChild(option);
            });
        }

        function deletarProduto(event) {
            event.preventDefault();
            
            const index = document.getElementById('produtoSelecionado').value;
            let produtos = JSON.parse(localStorage.getItem('produtos')) || [];

            if (index !== "") {
                produtos.splice(index, 1);  // Remover o produto da lista
                localStorage.setItem('produtos', JSON.stringify(produtos));

                alert('Produto deletado com sucesso!');
                carregarListaDeProdutos();  // Atualizar a lista no select
            } else {
                alert('Selecione um produto válido para deletar.');
            }

            document.getElementById('deletarProdutoForm').reset();
        }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
