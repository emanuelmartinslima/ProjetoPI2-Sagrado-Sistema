<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Planilha de Contratos - Sagrado Neon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* Tema claro */
        :root {
            --background-color: rgb(192, 185, 216);
            --text-color: aliceblue;
            --navbar-background-color: rgb(49, 4, 59);
        }

        /* Tema escuro */
        .dark-mode {
            --background-color: rgb(29, 5, 33);
            --text-color: #ffffff;
            --navbar-background-color: rgb(49, 4, 59);
        }

        body {
            background-color: var(--background-color);
            color: var(--text-color);
        }

        .navbar {
            background-color: var(--navbar-background-color);
        }

        .btn-dark-mode {
            background-color: #ffffff;
            color: #000000;
        }

        .table-container {
            background-color: var(--navbar-background-color);
            padding: 20px;
            border-radius: 8px;
        }

        footer {
            background-color: rgb(49, 4, 59);
            color: white;
        }

        .content-spacing {
            margin-top: 40px;
            margin-bottom: 40px;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <img src="Images/Logoextendido.png" width="150" height="40" alt="Logo">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <div class="dropdown">
                        <button id="toggleTheme" class="btn btn-light btn-dark-mode">
                            <i class="bi bi-moon-fill"></i>
                        </button>
                        <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Menu
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="cadastro">Cadastrar Usuário</a></li>
                            <li><a class="dropdown-item" href="">Gerar Relatórios</a></li>
                            <li><a class="dropdown-item" href="cadastrarClienteGerente">Gerar Contratos</a></li>
                            <li><a class="dropdown-item" href="editarDados">Editar Dados</a></li>
                            <li><a class="dropdown-item" href="produtos">Produtos</a></li>
                            <li><a class="dropdown-item" href="/">Sair</a></li>
                        </ul>
                    </div>
                </ul>
            </div>
        </div>
    </nav>

    <div class="flex-grow-1 content-spacing">
        <div class="container">
            <!-- Tabela de Comissão -->
            <div class="table-container">
                <h2 class="text-center">Comissão de Vendas</h2>
                <table class="table table-striped table-bordered text-light">
                    <thead>
                        <tr>
                            <th>Data da Venda</th>
                            <th>Número do Contrato</th>
                            <th>Nome do Contratante</th>
                            <th>Itens Escolhidos</th>
                            <th>Valor Total</th>
                            <th>Comissão (2%)</th>
                        </tr>
                    </thead>
                    <tbody id="commissionTableBody">
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="5" class="text-end"><strong>Total da Comissão será:</strong></td>
                            <td id="totalCommission" class="text-center"><strong>R$ 0,00</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

    <footer class="text-light text-center py-3">
        Todos os direitos reservados
    </footer>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const isDarkMode = localStorage.getItem('darkMode') === 'true';
            if (isDarkMode) {
                document.body.classList.add('dark-mode');
                document.getElementById('toggleTheme').innerHTML = '<i class="bi bi-brightness-high"></i>';
            }
        });

        document.getElementById('toggleTheme').addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            const isDarkMode = document.body.classList.contains('dark-mode');
            localStorage.setItem('darkMode', isDarkMode);
            document.getElementById('toggleTheme').innerHTML = isDarkMode
                ? '<i class="bi bi-brightness-high"></i>'
                : '<i class="bi bi-moon-fill"></i>';
        });

        async function fetchContractData() {
            try {
                const response = await fetch('/getContracts');
                if (!response.ok) throw new Error('Erro ao carregar dados dos contratos.');
                
                const contracts = await response.json();
                const commissionTableBody = document.getElementById('commissionTableBody');
                let totalCommission = 0;
                
                contracts.forEach(contract => {
                    const commission = (contract.valorTotal * 0.02).toFixed(2);
                    totalCommission += parseFloat(commission);

                    const commissionRow = document.createElement('tr');
                    commissionRow.innerHTML = `
                        <td>${contract.dataVenda}</td>
                        <td>${contract.numeroContrato}</td>
                        <td>${contract.nomeContratante}</td>
                        <td>${contract.itensEscolhidos}</td>
                        <td>${contract.valorTotal}</td>
                        <td>R$ ${commission}</td>
                    `;
                    commissionTableBody.appendChild(commissionRow);
                });

                document.getElementById('totalCommission').innerHTML = `R$ ${totalCommission.toFixed(2)}`;
            } catch (error) {
                console.error(error);
                alert("Erro ao carregar dados dos contratos.");
            }
        }

        fetchContractData();
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
