<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Dashboard Operador - Sagrado Neon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>

        /* Tema claro */
        :root {
            --background-color: rgb(192, 185, 216);
            --text-color: aliceblue;
            --navbar-background-color: rgb(49, 04, 59);
        }

        /* Tema escuro */
        .dark-mode {
            --background-color: rgb(29, 5, 33);
            --text-color: #ffffff;
            --navbar-background-color: rgb(49, 04, 59);
        }

        body {
            background-color: var(--background-color);
            color: var(--text-color);
        }

        .navbar {
            background-color: var(--navbar-background-color);
        }

        .btn-dark-mode {
            background-color: #ffffff;
            color: #000000;
        }

        .card-title {
            color: white;
        }

        .card-custom {
            background-color: rgb(49, 04, 59);
            border: none;
            transition: transform 0.3s ease-in-out;
            width: 300px;
            height: 300px;
        }

        .card-custom:hover {
            transform: translateY(-5px);
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
        }

        .card-icon {
            font-size: 50px;
            color: white;
            margin-bottom: 20px;
        }

        .container-spacing {
            margin-top: 40px;
            margin-bottom: 40px;
        }

        .cards-wrapper {
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 30px;
        }

        .container-wrapper {
            height: calc(100vh - 80px);
            display: flex;
            align-items: center;
            justify-content: center;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg" style="background-color: rgb(49, 04, 59);">
        <div class="container-fluid">
            <img src="/Logoextendido.png" width="150" height="40" alt="Logo">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <div class="dropdown">

                        <button class="btn btn-light btn-dark-mode" id="toggleTheme">

                            <i class="bi bi-moon-fill"></i>
                        </button>
                        <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Menu
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="">Gerar Relatórios</a></li>
                            <li><a class="dropdown-item" href="cadastrarCliente">Gerar Contratos</a></li>
                            <li><a class="dropdown-item" href="atualizarOperador">Editar Dados</a></li>

                            <li><a class="dropdown-item" href="">Cadastrar Produtos</a></li>
                            <li><a class="dropdown-item" href="/">Sair</a></li>

                        </ul>
                    </div>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Conteúdo Principal -->

    <div class="container-wrapper" style="background-color: --background-color;">

        <div class="container mt-4 container-spacing">
            <div class="cards-wrapper text-center">
                <!-- Card 1: Cadastrar Clientes -->
                <div class="card card-custom">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="bi bi-graph-up card-icon"></i>
                        <h5 class="card-title">Gerar Relatórios</h5>
                        <p class="card-text text-white text-center">Visualizar e gerar relatórios de vendas.</p>
                        <a href="" class="btn btn-light">Acessar</a>
                    </div>
                </div>
                <!-- Card 2: Gerar Contrato -->
                <div class="card card-custom">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="bi bi-file-earmark-text-fill card-icon"></i>
                        <h5 class="card-title">Gerar Contrato</h5>
                        <p class="card-text text-white text-center">Criar contratos para eventos.</p>
                        <a href="/cadastrarCliente" class="btn btn-light">Acessar</a>
                    </div>
                </div>
                <!-- Card 3: Editar Dados -->
                <div class="card card-custom">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="bi bi-pencil-square card-icon"></i>
                        <h5 class="card-title">Editar Dados</h5>
                        <p class="card-text text-white text-center">Atualizar informações pessoais.</p>
                        <a href="atualizarOperador" class="btn btn-light">Acessar</a>
                    </div>
                </div>
                <!-- Card 4: Cadastrar Produtos -->
                <div class="card card-custom">
                    <div class="card-body d-flex flex-column align-items-center justify-content-center">
                        <i class="bi bi-box-seam card-icon"></i>
                        <h5 class="card-title">Cadastrar Produtos</h5>
                        <p class="card-text text-white text-center">Adicionar novos produtos ao sistema.</p>
                        <a href="" class="btn btn-light">Acessar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<script>
            // Recupera o estado do tema do armazenamento local
        document.addEventListener('DOMContentLoaded', () => {
            const isDarkMode = localStorage.getItem('darkMode') === 'true';
            if (isDarkMode) {
                document.body.classList.add('dark-mode');
                document.getElementById('toggleTheme').innerHTML = '<i class="bi bi-brightness-high"></i>';
            }
        });

        // Alterna o tema e salva a preferência
        document.getElementById('toggleTheme').addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            const isDarkMode = document.body.classList.contains('dark-mode');
            localStorage.setItem('darkMode', isDarkMode);
            document.getElementById('toggleTheme').innerHTML = isDarkMode
                ? '<i class="bi bi-brightness-high"></i>'
                : '<i class="bi bi-moon-fill"></i>';
        });
</script>


    <!-- Rodapé -->
    <footer class="text-light text-center py-3" style="background-color: rgb(49, 04, 59);">
        Todos os direitos reservados
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>
