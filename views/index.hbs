<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sagrado Neon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* Tema claro */
        :root {
            --background-color: rgb(192, 185, 216);
            --text-color: aliceblue;
            --navbar-background-color: rgb(49, 04, 59);
        }

        /* Tema escuro */
        .dark-mode {
            --background-color: rgb(29, 5, 33);
            --text-color: #ffffff;
            --navbar-background-color: rgb(49, 04, 59);
            /* Mantém a cor do navbar */
        }

        body {
            background-color: var(--background-color);
            color: var(--text-color);
        }

        .navbar {
            background-color: var(--navbar-background-color);
        }

        .btn-dark-mode {
            background-color: #ffffff;
            color: #000000;
        }

        .is-invalid {
            border-color: #dc3545;
        }

        .invalid-feedback {
            display: block;
            color: #dc3545;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <img src="/Logoextendido.png" width="150" height="40" alt="Logo">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <button id="toggleTheme" class="btn btn-light btn-dark-mode">
                        <i class="bi bi-moon-fill"></i>
                    </button>
                    <li class="nav-item">
                        <a class="nav-link text-light" href="#">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="flex-grow-1 d-flex align-items-center justify-content-center">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-12 col-md-8 col-lg-6 d-flex align-items-center" style="min-height: 300px;">
                    <div class="w-100 p-4 text-center"
                        style="background-color: var(--navbar-background-color); border-radius: 10px;">
                        <p style="font-size: medium; color: var(--text-color);">Bem-vindo ao Sagrado Sistema!</p>
                        <img src="/WhatsApp Image 2024-08-22 at 12.39.38.jpeg" width="100" alt="Imagem" class="mb-3">

                        <!-- Formulário de login -->
                        <form id="loginForm" style="width: 100%;">
                            <div class="mb-3">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-envelope-at me-2"
                                        style="color: var(--text-color); font-size: 1.5rem;"></i>
                                    <label for="email" class="form-label"
                                        style="color: var(--text-color);">E-mail</label>
                                </div>
                                <input type="email" class="form-control" id="email" name="email">
                            </div>
                            <div class="mb-3">
                                <div class="d-flex align-items-center justify-content-center">
                                    <i class="bi bi-lock me-2" style="color: var(--text-color); font-size: 1.5rem;"></i>
                                    <label for="senha" class="form-label"
                                        style="color: var(--text-color);">Senha</label>
                                </div>
                                <input type="password" class="form-control" id="senha" name="senha">
                            </div>
                            <button type="submit" class="btn btn-primary">Entrar</button>
                            <br><br>
                            <a href="/emailConfirmacao" style="color: var(--text-color);">Esqueci minha senha</a>
                            <br><br>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Script para alternar o tema e validar o formulário -->
    <script>
        // Recupera o estado do tema do armazenamento local
        document.addEventListener('DOMContentLoaded', () => {
            const isDarkMode = localStorage.getItem('darkMode') === 'true';
            if (isDarkMode) {
                document.body.classList.add('dark-mode');
                document.getElementById('toggleTheme').innerHTML = '<i class="bi bi-brightness-high"></i>';
            }
        });

        // Alterna o tema e salva a preferência
        document.getElementById('toggleTheme').addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            const isDarkMode = document.body.classList.contains('dark-mode');
            localStorage.setItem('darkMode', isDarkMode);
            document.getElementById('toggleTheme').innerHTML = isDarkMode
                ? '<i class="bi bi-brightness-high"></i>'
                : '<i class="bi bi-moon-fill"></i>';
        });

        // Validação do formulário
        document.getElementById('loginForm').addEventListener('submit', async function (e) {
            e.preventDefault(); // Impede o recarregamento da página

            const email = document.getElementById('email');
            const senha = document.getElementById('senha');

            let isValid = true;

            // Limpa as mensagens de erro
            email.classList.remove('is-invalid');
            senha.classList.remove('is-invalid');

            // Verifica se os campos estão preenchidos
            if (!email.value.trim()) {
                email.classList.add('is-invalid');
                isValid = false;
            }

            if (!senha.value.trim()) {
                senha.classList.add('is-invalid');
                isValid = false;
            }

            if (!isValid) {
                alert("Por favor, preencha os campos vazios.");
                return; // Interrompe a execução do código se algum campo estiver vazio
            }

            // Fazendo a requisição para o servidor usando Fetch API
            const response = await fetch('/auth/login', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email: email.value.trim(), senha: senha.value.trim() })
            });

            const data = await response.json();

            if (data.success) {
                // Redireciona para a página de contrato ou onde for necessário
                window.location.href = data.redirect;;
            } else {
                // Exibe o alerta de erro
                alert(data.message);
            }
        });
    </script>

    <footer class="text-light text-center py-3" style="background-color: var(--navbar-background-color);">
        Todos os direitos reservados
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>

</html>