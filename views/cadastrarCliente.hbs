<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Cadastrar Clientes - Sagrado Neon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
            .title {
            color: white; 
            margin-bottom: 20px;
        }

        .form-container {
            background-color: rgb(49, 04, 59); 
            padding: 20px;
            border-radius: 8px;
        }

        .form-container input,
        .form-container select {
            margin-bottom: 10px;
        }

        .form-container label {
            color: white;
        }

        .content-spacing {
            margin-top: 40px; 
            margin-bottom: 40px; 
        }

        ./* Tema claro */
        :root {
            --background-color: rgb(192, 185, 216);
            --text-color: aliceblue;
            --navbar-background-color: rgb(49, 04, 59);
        }

        /* Tema escuro */
        .dark-mode {
            --background-color: rgb(29, 5, 33);
            --text-color: #ffffff;
            --navbar-background-color: rgb(49, 04, 59);
            /* Mantém a cor do navbar */
        }

        body {
            background-color: var(--background-color);
            color: var(--text-color);
        }

        .navbar {
            background-color: var(--navbar-background-color);
        }

        .btn-dark-mode {
            background-color: #ffffff;
            color: #000000;
        }

        .is-invalid {
            border-color: #dc3545;
        }

        .invalid-feedback {
            display: block;
            color: #dc3545;
        }
    
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg" style="background-color: rgb(49, 04, 59);">
        <div class="container-fluid">
            <img src="Images/Logoextendido.png" width="150" height="40" alt="Logo">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <div class="dropdown">
                        <button class="btn btn-light">
                            <i class="bi bi-moon-fill"></i>
                        </button>

                        <button class="btn btn-light" class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Menu
                        </button>
                        <ul class="dropdown-menu">
                            <li><button class="dropdown-item" type="button" onclick="window.location.href='cadastrarCliente">Gerar Contratos</button></li>
                            <li><button class="dropdown-item" type="button">Sair</button></li>
                        </ul>
                    </div>
                </ul>
            </div>
        </div>
    </nav>

    <div class="flex-grow-1" style="background-color: rgb(192, 185, 216);">
        <div class="container mt-4 content-spacing">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10">
                    <div class="form-container">
                        <h1 class="text-center title">Cadastrar Clientes</h1>
                        <form id="cadastroForm" onsubmit="return cadastrarCliente(event)">
                            <div class="mb-3 row">
                                <label for="cpfCnpj" class="col-sm-4 col-form-label">CPF ou CNPJ:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="cpfCnpj" required>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="contratante" class="col-sm-4 col-form-label">Contratante:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="contratante" required>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="endereco" class="col-sm-4 col-form-label">Endereço:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="endereco" required>
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Cadastrar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="text-light text-center py-3" style="background-color: rgb(49, 04, 59);">
        Todos os direitos reservados
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>

    <script>
        function cadastrarCliente(event) {
            event.preventDefault(); // Evita o envio padrão do formulário
            
            // Obtendo os valores dos campos
            const contratante = document.getElementById("contratante").value;
            const cpfCnpj = document.getElementById("cpfCnpj").value;
            const endereco = document.getElementById("endereco").value;

            // Armazenando os dados no LocalStorage
            localStorage.setItem("contratante", contratante);
            localStorage.setItem("cpfCnpj", cpfCnpj);
            localStorage.setItem("endereco", endereco);

            // Redirecionando para a página de "Gerar Contratos"
            window.location.href = "/paginaContrato";
        }
    </script>
</body>

</html>
