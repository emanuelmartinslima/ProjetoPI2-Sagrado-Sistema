    <script>
        // Função para calcular a comissão
        function calcularComissao(event) {
            event.preventDefault();
            const form = document.getElementById('comissaoForm');
            const formData = new FormData(form);

            // Implementar lógica de cálculo da comissão aqui ou enviar para o servidor
            alert(`Calculando comissão para o operador ${formData.get('operador')} no mês ${formData.get('mes')}, ano ${formData.get('ano')}.`);
        }
    </script>

