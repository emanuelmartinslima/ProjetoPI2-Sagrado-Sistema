    <div class="flex-grow-1 content-spacing">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-6 col-md-8">
                    <div class="form-container">
                        <h1 class="text-center title">Relatório de Comissões</h1>
                        <form id="comissaoForm" onsubmit="return calcularComissao(event)" action="/calcularComissao" method="POST">
                            <!-- Seleção do Operador -->
                            <div class="mb-3 row">
                                <label for="operador" class="col-sm-4 col-form-label">Operador:</label>
                                <div class="col-sm-8">
                                    <select class="form-control" id="operador" name="operador" required>
                                        <option value="">Selecione o operador</option>
                                        <option value="operador1">Operador 1</option>
                                        <option value="operador2">Operador 2</option>
                                        <option value="operador3">Operador 3</option>
                                        <!-- Adicione mais operadores conforme necessário -->
                                    </select>
                                </div>
                            </div>
                            <!-- Seleção do Mês -->
                            <div class="mb-3 row">
                                <label for="mes" class="col-sm-4 col-form-label">Mês:</label>
                                <div class="col-sm-8">
                                    <select class="form-control" id="mes" name="mes" required>
                                        <option value="">Selecione o mês</option>
                                        <option value="1">Janeiro</option>
                                        <option value="2">Fevereiro</option>
                                        <option value="3">Março</option>
                                        <option value="4">Abril</option>
                                        1<option value="5">Maio</option>
                                        <option value="6">Junho</option>
                                        <option value="7">Julho</option>
                                        <option value="8">Agosto</option>
                                        <option value="9">Setembro</option>
                                        <option value="10">Outubro</option>
                                        <option value="11">Novembro</option>
                                        <option value="12">Dezembro</option>
                                    </select>
                                </div>
                            </div>
                            <!-- Seleção do Ano -->
                            <div class="mb-3 row">
                                <label for="ano" class="col-sm-4 col-form-label">Ano:</label>
                                <div class="col-sm-8">
                                    <select class="form-control" id="ano" name="ano" required>
                                        <option value="">Selecione o ano</option>
                                        <!-- Opções de anos -->
                                        <option value="2023">2023</option>
                                        <option value="2024">2024</option>
                                        <option value="2025">2025</option>
                                        <!-- Adicione mais anos conforme necessário -->
                                    </select>
                                </div>
                            </div>
                            <!-- Botão para Calcular Comissão -->
                            <div class="text-center">
                                <br>
                                <button type="submit" class="btn btn-primary">Gerar Relatório</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
