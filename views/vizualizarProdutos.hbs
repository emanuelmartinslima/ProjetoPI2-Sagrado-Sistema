<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Produtos - Sagrado Neon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: rgb(192, 185, 216);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }

        .navbar {
            background-color: rgb(49, 04, 59);
        }

        footer {
            background-color: rgb(49, 04, 59);
            color: white;
            position: relative;
            bottom: 0;
            width: 100%;
            margin-top: auto;
        }

        .card {
            background-color: rgb(49, 04, 59);
            color: white;
        }

        .card-title {
            font-weight: bold;
        }

        .content-spacing {
            margin-top: 40px;
            margin-bottom: 40px;
        }
    </style>
</head>

<body>

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <img src="Images/Logoextendido.png" width="150" height="40" alt="Logo">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <div class="dropdown">
                        <button class="btn btn-light">
                            <i class="bi bi-moon-fill"></i>
                        </button>
                        <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Menu
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="#">Gerar Relatórios</a></li>
                            <li><a class="dropdown-item" href="cadastrarCliente">Gerar Contratos</a></li>
                            <li><a class="dropdown-item" href="atualizarOperador">Editar Dados</a></li>
                            <li><a class="dropdown-item" href="#">Cadastrar Produtos</a></li>
                            <li><a class="dropdown-item" href="/">Sair</a></li>
                        </ul>
                    </div>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container content-spacing flex-grow-1">
        <h1 class="text-center mb-4" style="color: rgb(49, 04, 59);">Produtos</h1>
        <div class="row" id="productCards"></div>
    </div>

    <footer class="text-light text-center py-3">
        Todos os direitos reservados
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const produtos = JSON.parse(localStorage.getItem("produtos")) || [];
            const productCards = document.getElementById("productCards");

            if (produtos.length === 0) {
                productCards.innerHTML = "<p class='text-center'>Nenhum produto cadastrado.</p>";
            } else {
                produtos.forEach(produto => {
                    const card = document.createElement("div");
                    card.className = "col-md-4 mb-4";

                    card.innerHTML = `
                        <div class="card h-100">
                            <img src="Images/${produto.imagemProduto}" class="card-img-top" alt="${produto.nomeProduto}">
                            <div class="card-body">
                                <h5 class="card-title">${produto.nomeProduto}</h5>
                                <p class="card-text">Dimensões: ${produto.dimensoes}</p>
                                <p class="card-text">Quantidade: ${produto.quantidade}</p>
                            </div>
                        </div>
                    `;
                    productCards.appendChild(card);
                });
            }
        });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

</body>

</html>
