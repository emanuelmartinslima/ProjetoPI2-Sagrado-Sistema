<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Editar Produtos - Sagrado Neon</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* Tema claro */
        :root {
            --background-color: rgb(192, 185, 216);
            --text-color: aliceblue;
            --navbar-background-color: rgb(49, 04, 59);
        }

        /* Tema escuro */
        .dark-mode {
            --background-color: rgb(29, 5, 33);
            --text-color: #ffffff;
            --navbar-background-color: rgb(49, 04, 59);
            /* Mantém a cor do navbar */
        }

        body {
            background-color: var(--background-color);
            color: var(--text-color);
        }

        .navbar {
            background-color: var(--navbar-background-color);
        }

        .btn-dark-mode {
            background-color: #ffffff;
            color: #000000;
        }

        .is-invalid {
            border-color: #dc3545;
        }

        .invalid-feedback {
            display: block;
            color: #dc3545;
        }

        .title {
            color: white;
            margin-bottom: 20px;
        }

        .form-container {
            background-color: rgb(49, 04, 59);
            padding: 20px;
            border-radius: 8px;
        }

        footer {
            background-color: rgb(49, 04, 59);
            color: white;
        }

        .content-spacing {
            margin-top: 40px;
            margin-bottom: 40px;
        }

        .form-container label {
            color: white;
        }
    </style>
</head>

<body class="d-flex flex-column min-vh-100">

    <nav class="navbar navbar-expand-lg" style="background-color: rgb(49, 04, 59);">
        <div class="container-fluid">
            <img src="Images/Logoextendido.png" width="150" height="40" alt="Logo">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <div class="dropdown">
                        <button id="toggleTheme" class="btn btn-light btn-dark-mode">
                            <i class="bi bi-moon-fill"></i>
                        </button>
                        <button class="btn btn-light dropdown-toggle" type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Menu
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" href="vizualizarProdutos">Visualizar Produtos</a></li>
                            <li><a class="dropdown-item" href="formCadastrarProdutos">Cadastrar Produto</a></li>
                            <li><a class="dropdown-item" href="formEditarProdutos">Editar Produto</a></li>
                            <li><a class="dropdown-item" href="formDeletarProdutos">Deletar Produto</a></li>
                            <li><a class="dropdown-item" href="telaInicial">Tela Inicial</a></li>
                            <li><a class="dropdown-item" href="/">Sair</a></li>
                        </ul>
                    </div>
                </ul>
            </div>
        </div>
    </nav>

    <div class="flex-grow-1 content-spacing">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8 col-md-10" style="background-color: var(--navbar-background-color);">
                    <div class="form-container">
                        <h1 class="text-center title">Editar Produto</h1>
                        <form id="editarProdutoForm" onsubmit="return editarProduto(event)">
                            <div class="mb-3 row">
                                <label for="produtoSelecionado" class="col-sm-4 col-form-label">Produto:</label>
                                <div class="col-sm-8">
                                    <select class="form-select" id="produtoSelecionado" onchange="carregarProduto()">
                                        <option value="" disabled selected>Selecione um produto</option>
                                    </select>
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="nomeProduto" class="col-sm-4 col-form-label">Nome do Produto:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="nomeProduto" name="nome">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="dimensoes" class="col-sm-4 col-form-label">Dimensões:</label>
                                <div class="col-sm-8">
                                    <input type="text" class="form-control" id="dimensoes" name="dimensoes">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="quantidade" class="col-sm-4 col-form-label">Valor Individual:</label>
                                <div class="col-sm-8">
                                    <input type="number" class="form-control" id="valorUnidade" name="valorUnidade"
                                        step="0.01">
                                </div>
                            </div>
                            <div class="mb-3 row">
                                <label for="imagemProduto" class="col-sm-4 col-form-label">Estado:</label>
                                <div class="col-sm-8">
                                    <select class="form-control" id="estado" name="estado">
                                        <option value="">Selecione uma opção</option>
                                        <option value="uso">Em condições de uso</option>
                                        <option value="danificado">Danificado</option>
                                        <option value="manutenção">Em manutenção</option>
                                    </select>
                                </div>

                            </div>
                            <div class="mb-3 row">
                                <label for="imagemProduto" class="col-sm-4 col-form-label">Imagem:</label>
                                <div class="col-sm-8">
                                    <input type="file" class="form-control" id="imagemProduto" name="imagem">
                                </div>
                            </div>
                            <div class="text-center">
                                <button type="submit" class="btn btn-primary">Salvar Alterações</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="text-light text-center py-3">
        Todos os direitos reservados
    </footer>

    <script>
        // Recupera o estado do tema do armazenamento local
        document.addEventListener('DOMContentLoaded', () => {
            const isDarkMode = localStorage.getItem('darkMode') === 'true';
            if (isDarkMode) {
                document.body.classList.add('dark-mode');
                document.getElementById('toggleTheme').innerHTML = '<i class="bi bi-brightness-high"></i>';
            }
        });

        // Alterna o tema e salva a preferência
        document.getElementById('toggleTheme').addEventListener('click', () => {
            document.body.classList.toggle('dark-mode');
            const isDarkMode = document.body.classList.contains('dark-mode');
            localStorage.setItem('darkMode', isDarkMode);
            document.getElementById('toggleTheme').innerHTML = isDarkMode
                ? '<i class="bi bi-brightness-high"></i>'
                : '<i class="bi bi-moon-fill"></i>';
        });

        document.addEventListener("DOMContentLoaded", function () {
            carregarListaDeProdutos();
        });

        function carregarListaDeProdutos() {
            const produtos = JSON.parse(localStorage.getItem('produtos')) || [];
            const produtoSelecionado = document.getElementById('produtoSelecionado');

            // Limpa as opções existentes no select
            produtoSelecionado.innerHTML = '<option value="" disabled selected>Selecione um produto</option>';

            produtos.forEach((produto, index) => {
                const option = document.createElement('option');
                option.value = index;
                option.textContent = produto.nomeProduto;
                produtoSelecionado.appendChild(option);
            });
        }

        function carregarProduto() {
            const produtos = JSON.parse(localStorage.getItem('produtos')) || [];
            const index = document.getElementById('produtoSelecionado').value;
            const produto = produtos[index];

            document.getElementById('nomeProduto').value = produto.nomeProduto;
            document.getElementById('dimensoes').value = produto.dimensoes;
            document.getElementById('valorUnidade').value = produto.valorUnidade;
            document.getElementById('estado').value = produto.estado;
        }

        function editarProduto(event) {
            event.preventDefault();

            const index = document.getElementById('produtoSelecionado').value;

            // Verifique se nenhum produto foi selecionado
            if (index === null || index === "") {
                alert('Por favor, selecione um produto para editar.');
                return; // Encerra a função se nenhum produto for selecionado
            }

            const produtos = JSON.parse(localStorage.getItem('produtos')) || [];

            produtos[index].nomeProduto = document.getElementById('nomeProduto').value;
            produtos[index].dimensoes = document.getElementById('dimensoes').value;
            produtos[index].valorUnidade = document.getElementById('valorUnidade').value;
            produtos[index].estado = document.getElementById('estado').value;

            const imagemInput = document.getElementById('imagemProduto');
            if (imagemInput.files[0]) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    produtos[index].imagemProduto = e.target.result;  // Salva a imagem em base64
                    localStorage.setItem('produtos', JSON.stringify(produtos));
                    alert('Produto editado com sucesso!');
                    document.getElementById('editarProdutoForm').reset();
                    carregarListaDeProdutos();
                };
                reader.readAsDataURL(imagemInput.files[0]);
            } else {
                localStorage.setItem('produtos', JSON.stringify(produtos));
                alert('Produto editado com sucesso!');
                document.getElementById('editarProdutoForm').reset();
                carregarListaDeProdutos();
            }
        }

    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>